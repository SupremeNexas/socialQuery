    <form action="/submit" method="POST">
      <!-- Dropdown for query selection -->
      <div class="mb-3 text-center">
        <select id="querySelect" name="query" class="form-select" style="max-width: 400px; margin: auto;" required>
          <option value="">-- Select a Query --</option>
          <option value="Unliked Post">Unliked Post</option>
          <option value="Removed Comment">Removed Comment</option>
          <option value="Not Followed by You">Not Followed by You</option>
          <option value="Doesn't Follow You Back">Doesn't Follow You Back</option>
          <option value="Profile Visitors">Profile Visitors</option>
          <option value="Unfollowed You">Unfollowed You</option>
          <option value="Profile Visits">Profile Visits</option>
          <option value="Auto Comment Flagger">Auto Comment Flagger</option>
          <option value="Auto Account Deletion (Flagged)">Auto Account Deletion (Flagged)</option>
          <option value="Engagement Analysis">Engagement Analysis</option>
          <option value="Post Heatmap">Post Heatmap</option>
          <option value="Best Time to Post">Best Time to Post</option>
        </select>
        
      </div>

      <!-- Input for User ID -->
      <div class="mb-3 text-center">
        <input type="text" name="userId" class="form-control" placeholder="Enter your User ID" style="max-width: 400px; margin: auto;">
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary"
        style="width: 200px;">Run Query</button>
      </div>
    </form>
